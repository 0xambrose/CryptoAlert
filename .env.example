# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DB_PATH=./crypto_alert.sqlite
DB_MAX_CONNECTIONS=10

# API Configuration
COINGECKO_API_URL=https://api.coingecko.com/api/v3
API_TIMEOUT=10000
API_RETRIES=3

# SMTP Email Configuration (optional)
# Leave these empty to disable email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Alert Configuration
ALERT_CHECK_INTERVAL=*/5 * * * *
MAX_ALERTS_PER_USER=10
MAX_PRICE_HISTORY=1000

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Alternative SMTP providers:
# Gmail: smtp.gmail.com (port 587, secure=false)
# Outlook: smtp-mail.outlook.com (port 587, secure=false)
# Yahoo: smtp.mail.yahoo.com (port 587, secure=false)